@{
    ViewBag.Title = "Вход";
}

<h2>Вход</h2>

@using (Html.BeginForm("Login", "Home"))
{
    <label>Логин </label> @Html.TextBox("login")<br/>
    <label>Пароль </label> @Html.TextBox("password")<br />
    <input type="submit" value="Войти"/>
}

@{
    object isLogged = TempData["logged"];
}
@if (isLogged != null)
{
    <div style="color: red">Попытка входа записана</div>
}